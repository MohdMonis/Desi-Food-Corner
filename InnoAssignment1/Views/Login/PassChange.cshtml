
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PassChange</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel='stylesheet' href='~/Content/Custom/login_logout.css'>
</head>
<body>
    <div id="main">
        <div id="mail-overlay">
            <h1 id="heading">Change Password Form</h1>
            <h4 id="para">After submitting the form with correct credentials u'll see your Orders List page with new password.</h4>
            <div id="loginform">
                <form>
                    <div class="mb-3 row">
                        <label for="opass" class="lbl col-sm-2 col-form-label">Old Password</label>
                        <div>
                            <input id="opass" class="input form-control" type="password" name="password" required placeholder="Enter Old Password" />
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="cpass" class="lbl col-sm-2 col-form-label">New Password</label>
                        <div>
                            <input id="cpass" class="input form-control" type="password" name="pass" required placeholder="Enter New Password" />
                        </div>
                    </div>
                    <div class="dis-flex-clm">
                        <input type="submit" class="btn btn-primary btn-login" formaction='@Url.Action("ChangePassowrd", "Login")' value="Change Password" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
